{
  "manifest_version": 3,
  "name": "Glypher",
  "description": "Quick copy'n'paste of miscellaneous characters and symbols",
  "version": "0.1.0",
  "homepage_url": "https://github.com/tripu/glypher",
  "browser_specific_settings": {
    "gecko": {
      "id": "glypher@tripu.info"
    }
  },
  "icons": {
    "48": "img/logo-48.png",
    "96": "img/logo-96.png",
    "256": "img/logo-256.png"
  },
  "action": {
    "default_title": "Glypher [Alt+U / ‚å•+U]",
    "default_icon": {
      "48": "img/logo-48.png",
      "96": "img/logo-96.png",
      "256": "img/logo-256.png"
    }
  },
  "commands": {
    "show": {
      "description": "Glypher",
      "suggested_key": {
        "default": "Alt+U"
      }
    }
  },
  "options_ui": {
    "open_in_tab": false,
    "page": "pages/options.html"
  },
  "background": {
    "page": "pages/background.html"
  },
  "permissions": [
    "clipboardWrite"
  ]
}
