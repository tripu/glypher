{
    "manifest_version": 2,
    "name": "Glypher",
    "version": "0.1.0",
    "homepage_url": "https://github.com/tripu/glypher",
    "applications": {
        "gecko": {
            "id": "glypher@tripu.info"
        }
    },
    "description": "Quick copy'n'paste of miscellaneous characters and symbols",
    "icons": {
        "48": "img/logo-48.png",
        "96": "img/logo-96.png",
        "256": "img/logo-256.png"
    },
    "browser_action": {
        "browser_style": false,
        "chrome_style": false,
        "default_title": "Glypher [Ctrl+↑ / ⌘+↑]",
        "default_icon": {
            "48": "img/logo-48.png",
            "96": "img/logo-96.png",
            "256": "img/logo-256.png"
        }
    },
    "commands": {
        "foo": {
            "suggested_key": {
                "default": "Ctrl+Up",
                "linux": "Ctrl+Up"
            },
            "description": "Glypher"
        }
    },
    "options_ui": {
        "browser_style": true,
        "chrome_style": true,
        "open_in_tab": false,
        "page": "pages/options.html"
    },
    "background": {
        "page": "pages/glyphs.html"
    }
}